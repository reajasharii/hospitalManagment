@model IEnumerable<HospitalManagement.Models.HospitalStaff>

<h1>Hospital Staff</h1>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Full Name</th>
            <th>Position</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var staff in Model)
        {
            <tr>
                <td>@staff.Id</td>
                <td>@staff.FullName</td>
                <td>@staff.Position</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = staff.Id })">Edit</a> |
                    <a href="@Url.Action("Details", new { id = staff.Id })">Details</a> |
                    <a href="@Url.Action("Delete", new { id = staff.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")">Add New Staff Member</a>
