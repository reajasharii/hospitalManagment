@model HospitalManagement.Models.HospitalStaff

<h1>Delete Staff</h1>

<p>Are you sure you want to delete the following staff member?</p>

<dl class="row">
    <dt class="col-sm-2">Full Name</dt>
    <dd class="col-sm-10">@Model.FullName</dd>

    <dt class="col-sm-2">Position</dt>
    <dd class="col-sm-10">@Model.Position</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
