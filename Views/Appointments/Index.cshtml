@model IEnumerable<HospitalManagement.Models.Appointment>

<h2>Appointments</h2>


<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Appointment Date</th>
            <th>Reason for Visit</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.FirstName</td>
                <td>@appointment.LastName</td>
                <td>@appointment.AppointmentDate.ToString("g")</td>
                <td>@appointment.Reason</td>
                <td>@appointment.Department</td>
                <td>
                 
                    <a href="@Url.Action("Delete", new { id = appointment.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
