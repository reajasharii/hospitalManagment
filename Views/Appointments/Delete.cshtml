@model HospitalManagement.Models.Appointment

<h2>Delete Appointment</h2>

<div>
    <h4>Are you sure you want to delete this appointment?</h4>
    <dl class="dl-horizontal">
        <dt>First Name</dt>
        <dd>@Model.FirstName</dd>
        <dt>Last Name</dt>
        <dd>@Model.LastName</dd>
        <dt>Appointment Date</dt>
        <dd>@Model.AppointmentDate</dd>
        <dt>Reason for Visit</dt>
        <dd>@Model.Reason</dd>
        <dt>Department</dt>
        <dd>@Model.Department</dd>
    </dl>

    <!-- Form for deleting the appointment -->
    <form asp-action="Delete" method="post">
        <!-- Hidden field to pass the id to the delete method -->
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
