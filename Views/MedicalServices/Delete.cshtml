@model HospitalManagement.Models.MedicalService

<h2>Delete Medical Service</h2>

<div>
    <h4>Are you sure you want to delete this medical service?</h4>
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>@Model.Name</dd>
        <dt>Description</dt>
        <dd>@Model.Description</dd>
        <dt>Price</dt>
        <dd>@Model.Price</dd>
        <dt>Duration</dt>
        <dd>@Model.Duration</dd>
        <dt>Category</dt>
        <dd>@Model.Category</dd>
        <dt>Created Date</dt>
        <dd>@Model.CreatedDate.ToString("yyyy-MM-dd")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
