@model HospitalManagement.Models.ApplicationUser

<h2>Are you sure you want to delete this patient?</h2>

<form asp-action="DeleteConfirmedPatient" asp-controller="Admin" method="post">
    @Html.AntiForgeryToken() <!-- Make sure the anti-forgery token is included -->
    <input type="hidden" asp-for="Id" />
    <button type="submit">Yes, Delete</button>
</form>

<p>
    <a href="@Url.Action("ManagePatients", "Admin")">Cancel</a>
</p>
