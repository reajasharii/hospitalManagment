@model List<ApplicationUser>

<h2>Manage Admins</h2>

<!-- Create Button -->
<a href="@Url.Action("CreateAdmin", "Admin")" class="btn btn-success mb-3">Create New Admin</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
   <tbody>
    @foreach (var admin in Model)
    {
        <tr>
            <td>@admin.FullName</td> <!-- Use FullName here -->
            <td>@admin.Email</td>
            <td>
                <a href="@Url.Action("EditAdmin", "Admin", new { id = admin.Id })" class="btn btn-primary">Edit</a>
                <a href="javascript:void(0);" onclick="deleteAdmin('@admin.Id')" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</tbody>

</table>

<!-- Add JavaScript for Delete Confirmation -->
<script>
    function deleteAdmin(adminId) {
        if (confirm('Are you sure you want to delete this admin?')) {
            window.location.href = '@Url.Action("DeleteAdmin", "Admin", new { id = "__adminId__" })'.replace('__adminId__', adminId);
        }
    }
</script>
