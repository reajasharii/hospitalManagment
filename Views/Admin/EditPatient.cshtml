@using HospitalManagement.ViewModels
@model HospitalManagement.ViewModels.EditPatientViewModel

@{
    ViewData["Title"] = "Edit Patient";
}

<h2>Edit Patient</h2>

<form asp-action="EditPatient" asp-controller="Admin" method="post">
    @Html.AntiForgeryToken()

    <!-- Hidden field for the patient's ID -->
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="FullName">Full Name</label>
        <input type="text" class="form-control" id="FullName" name="FullName" value="@Model.FullName" required />
    </div>

    <div class="form-group">
        <label for="Surname">Surname</label>
        <input type="text" class="form-control" id="Surname" name="Surname" value="@Model.Surname" required />
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
    </div>

    <div class="form-group">
        <label for="MedicalHistory">Medical History</label>
        <textarea class="form-control" id="MedicalHistory" name="MedicalHistory" required>@Model.MedicalHistory</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<a href="@Url.Action("ManagePatients")" class="btn btn-secondary mt-3">Back to Manage Patients</a>
