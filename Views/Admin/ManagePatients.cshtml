@model IEnumerable<HospitalManagement.Models.ApplicationUser>

<h2>Manage Patients</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.FullName @patient.Surname</td>
                <td>@patient.Email</td>
                <td>
                    <!-- Link to the EditPatient action, passing the patient Id -->
                    <a href="@Url.Action("EditPatient", "Admin", new { id = patient.Id })" class="btn btn-warning">Edit</a>
                   <a href="@Url.Action("DeletePatient", "Admin", new { id = patient.Id })" class="btn btn-danger">Delete</a>


                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="CreatePatient" class="btn btn-success">Create New Patient</a>

