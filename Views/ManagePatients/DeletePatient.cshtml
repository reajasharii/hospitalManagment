@model HospitalManagement.Models.Patient

@{
    ViewData["Title"] = "Delete Patient";
}

<h2>Delete Patient</h2>

<div>
    <h3>Are you sure you want to delete this patient?</h3>
    <dl class="row">
        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Model.FullName</dd>
        <dt class="col-sm-2">Medical History</dt>
        <dd class="col-sm-10">@Model.MedicalHistory</dd>
    </dl>

    <form asp-action="DeletePatient" method="post">
        <input asp-for="Id" type="hidden" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="ManagePatients" class="btn btn-secondary">Cancel</a>
    </form>
</div>
