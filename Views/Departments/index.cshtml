@model IEnumerable<HospitalManagement.Models.Departments>

<h2>Departments</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New Department</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Location</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dep in Model)
        {
            <tr>
                <td>@dep.Name</td>
                <td>@dep.Description</td>
                <td>@dep.Location</td>
                <td>@dep.PhoneNumber</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = dep.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", new { id = dep.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
