@model HospitalManagement.ViewModels.EditAccountViewModel

@{
    ViewData["Title"] = "My Account";
}

<h2>My Account</h2>

<form asp-action="MyAccount" asp-controller="Doctor" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" placeholder="Enter your full name" required />
    </div>

    <div class="form-group">
        <label asp-for="Surname"></label>
        <input asp-for="Surname" class="form-control" placeholder="Enter your surname" required />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" type="email" placeholder="Enter your email" />
    </div>

    <div class="form-group">
        <label asp-for="DateOfBirth"></label>
        <input asp-for="DateOfBirth" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="Specialty"></label>
        <input asp-for="Specialty" class="form-control" placeholder="Enter your specialty" />
    </div>

    <div class="form-group">
        <label asp-for="LicenseNumber"></label>
        <input asp-for="LicenseNumber" class="form-control" placeholder="Enter your license number" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
</form>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["SuccessMessage"]
    </div>
}
