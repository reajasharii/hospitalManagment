@model IEnumerable<HospitalManagement.Models.HospitalStaff>

<h2>Hospital Staff</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New Staff</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Position</th>
            <th>Department</th>
            <th>Working Hours</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var staff in Model)
        {
            <tr>
                <td>@staff.Name</td>
                <td>@staff.Position</td>
                <td>@staff.Department</td>
                <td>@staff.WorkingHours</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = staff.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", new { id = staff.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
