@model HospitalManagement.Models.HospitalStaff

<h2>Create Hospital Staff</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" asp-for="Name" required />
    </div>
    <div class="form-group">
        <label for="Position">Position</label>
        <input type="text" class="form-control" id="Position" name="Position" asp-for="Position" required />
    </div>
    <div class="form-group">
        <label for="Department">Department</label>
        <input type="text" class="form-control" id="Department" name="Department" asp-for="Department" required />
    </div>
    <div class="form-group">
        <label for="WorkingHours">Working Hours</label>
        <input type="text" class="form-control" id="WorkingHours" name="WorkingHours" asp-for="WorkingHours" required />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
